<View
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	controllerName="demo.controller.Detail1">
	<Page
		title="{orderName}"
		navButtonPress="onNavBack"
		showNavButton="{device>/system/phone}">
		<content>
					<List id="products" 
						items="{products}"
						headerText="{i18n>orderProductListHeaderText}">
					<items>
						<StandardListItem title="{productName}" 
							type="Active"
							press="onSelectionChange"/>
					</items>
				</List>
		</content>
	</Page>
</View>